                <!-- Aquí comienza el código PHP para validación -->
                <?php
                session_start();

                if ($_SERVER["REQUEST_METHOD"] == "POST") {
                  // Datos de conexión
                  $servername = "localhost";
                  $username = "u326335575_alien";  // Cambia esto por tu usuario de MySQL
                  $password = "AlienStage1234";  // Cambia esto por tu contraseña de MySQL
                  $dbname = "u326335575_astage";  // Cambia esto por el nombre de tu base de datos

                  // Crear conexión
                  $conn = new mysqli($servername, $username, $password, $dbname);

                  // Verificar conexión
                  if ($conn->connect_error) {
                      die("Conexión fallida: " . $conn->connect_error);
                  }

                  $correo = $_POST['correo'];
                  $contraseña = $_POST['contraseña'];

                  // Verificar si los campos están completos
                  if (empty($correo) || empty($contraseña)) {
                      echo "<script>
                              Swal.fire({
                                icon: 'warning',
                                title: 'Campos Incompletos',
                                text: 'Por favor, complete todos los campos.',
                              });
                            </script>";
                  } else {
                      // Preparar y ejecutar la consulta
                      $stmt = $conn->prepare("SELECT * FROM login WHERE correo = ? AND contraseña = ?");
                      $stmt->bind_param("ss", $correo, $contraseña);
                      $stmt->execute();
                      $result = $stmt->get_result();

                      if ($result->num_rows > 0) {
                          $row = $result->fetch_assoc();
                          $_SESSION['codigo'] = $row['codigo'];
                          $_SESSION['nombre'] = $row['nombre'];
                          $_SESSION['apellido'] = $row['apellido'];

                          echo "<script>
                                  Swal.fire({
                                    icon: 'success',
                                    title: 'Bienvenido',
                                    text: 'Hola, " . $_SESSION['nombre'] . " " . $_SESSION['apellido'] . "!',
                                  }).then(function() {";

                          if (strpos($row['codigo'], 'Adm') === 0) {
                              echo "window.location.href = '/alienstage/pages/inicio.php';";
                          } elseif (strpos($row['codigo'], 'Emp') === 0) {
                              echo "window.location.href = '/alienstage/pages/inicio.php';";
                          }

                          echo "});
                                </script>";

                      } else {
                          echo "<script>
                                  Swal.fire({
                                    icon: 'error',
                                    title: 'Inicio de Sesión Fallido',
                                    text: 'Correo o contraseña incorrectos.',
                                  });
                                </script>";
                      }

                      $stmt->close();
                      $conn->close();
                  }
                }
                ?>
                <!-- Aquí termina el código PHP para validación -->

                <form role="form" class="text-start" action="" method="POST">
